<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ig" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivlogo"
        android:background="@color/colorTransparent"
        android:padding="15dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_margin="10dp"
        android:hint="Username" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUsername"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorTransparent"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:password="true"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />
    <Button
        android:id="@+id/btnLogin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_margin="10dp"
        android:padding="18dp"
        android:textColor="@android:color/white"
        android:text="Login"
        android:background="@drawable/button_border"/>
    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin2"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:text="Forgot your password ? Request link here"/>
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:text="OR"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/facebooklink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/or"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/facebook"
        android:drawablePadding="5dp"
        android:text="Login with Facebook"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/facebooklink"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp"
        android:background="@color/colorTransparent2"
        android:gravity="center"
        android:text="New to Instagram? Sign up"
        android:textColor="@android:color/white" />
</RelativeLayout>